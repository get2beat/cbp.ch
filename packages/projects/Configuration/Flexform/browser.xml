<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<sDEF>
			<ROOT>

					<sheetTitle>Einstellungen</sheetTitle>

				<type>array</type>
				<el>
                    <settings.filterCategory>

                            <label>Ausgabe nach Kategorien (Bereiche)</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Alle</numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                </items>
                                <foreign_table>tx_projects_domain_model_area</foreign_table>
                            </config>

                    </settings.filterCategory>

					<settings.singleProject>

							<label>Einzelne Projekte</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>	tx_projects_domain_model_project</allowed>
								<size>3</size>
								<maxitems>50</maxitems>
								<minitems>0</minitems>
							</config>

					</settings.singleProject>
					<settings.detailPid>

							<label>Detailseite Projekt</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
							</config>

					</settings.detailPid>

					<settings.listPid>

							<exclude>0</exclude>
							<label>Liste</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
							</config>

					</settings.listPid>
				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>
